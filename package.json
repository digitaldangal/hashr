{
  "name": "hashr",
  "version": "1.0.0-SNAPSHOT",
  "private": true,
  "description": "An easy to use file hashing utility working with multiple algorithms. Powered by React & Material UI, built as a cross-plaform desktop application using Electron.",
  "keywords": [
    "Electron",
    "hash",
    "javascript",
    "node",
    "react",
    "typescript"
  ],
  "homepage": "https://github.com/kobionic/hashr",
  "bugs": {
    "url": "https://github.com/kobionic/hashr/issues"
  },
  "license": "Apache-2.0",
  "author": "Jeremie Rodriguez <contact@jeremierodriguez.com> (https://github.com/jeremiergz)",
  "main": "build/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kobionic/hashr.git"
  },
  "scripts": {
    "build": "npm-run-all --parallel 'build:web -- --mode production' build:electron",
    "build:desktop": "build --x64 -mwl",
    "build:dev": "npm-run-all --parallel 'build:web -- --mode development --watch' 'build:electron -- --watch'",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:web": "webpack --mode production",
    "clean": "del-cli dist",
    "package": "npm-run-all clean build build:desktop",
    "start": "electron ."
  },
  "dependencies": {
    "@material-ui/core": "1.0.0",
    "@material-ui/icons": "1.0.0",
    "bytes": "3.0.0",
    "moment": "2.22.1",
    "ms": "2.1.1",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "react-toastify": "4.0.1"
  },
  "devDependencies": {
    "@types/bytes": "3.0.0",
    "@types/react": "16.3.14",
    "@types/react-dom": "16.0.5",
    "@types/react-toastify": "4.0.0",
    "ajv": "6.5.0",
    "app-root-path": "2.0.1",
    "clean-webpack-plugin": "0.1.19",
    "copy-webpack-plugin": "4.5.1",
    "css-loader": "0.28.11",
    "del-cli": "1.1.0",
    "electron": "2.0.1",
    "electron-builder": "20.13.4",
    "file-loader": "1.1.11",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "interpolate-html-plugin": "3.0.0",
    "mini-css-extract-plugin": "0.4.0",
    "npm-run-all": "4.1.3",
    "optimize-css-assets-webpack-plugin": "4.0.1",
    "source-map-loader": "0.2.3",
    "ts-loader": "4.3.0",
    "tslint": "5.10.0",
    "tslint-react": "3.6.0",
    "typescript": "2.8.3",
    "typings-for-css-modules-loader": "1.7.0",
    "url-loader": "1.0.1",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3"
  },
  "build": {
    "appId": "com.kobionic.hashr",
    "copyright": "Copyright â’¸ 2018 KoBionic",
    "productName": "HashR",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "linux": {
      "category": "Utility",
      "synopsis": "An easy to use file hashing utility working with multiple algorithms.",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "tar.gz"
      ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "deb": {
      "packageCategory": "utils"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "tar.gz"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
